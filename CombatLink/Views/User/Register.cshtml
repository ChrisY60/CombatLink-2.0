@model CombatLink.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container">
    <div class="row login-box shadow-lg rounded overflow-hidden">
        <!-- Mobile image banner -->
        <div class="d-block d-md-none login-image-banner">
            <img src="~/images/RegisterIllustration.png" alt="Register Illustration" />
        </div>

        <!-- Register form -->
        <div class="col-12 col-md-6 d-flex align-items-center login-wrapper secondary-foreground">
            <div class="w-100 login-form-container">
                <h2 class="mb-4 text-center text-md-start">Register</h2>

                <form asp-action="Register" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" required />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3 text-center text-md-start">
                        <a asp-controller="User" asp-action="LogIn">Already have an account? Log In!</a>
                    </div>

                    <button type="submit" class="mainButton w-100">Register</button>
                </form>
            </div>
        </div>

        <!-- Desktop image side -->
        <div class="col-md-6 d-none d-md-block p-0">
            <div class="login-image-container">
                <img src="~/images/RegisterIllustration.png" alt="Register Illustration" />
            </div>
        </div>
    </div>
</div>
