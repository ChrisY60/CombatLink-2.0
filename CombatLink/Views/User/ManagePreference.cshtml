@model CombatLink.Application.ViewModels.UpdateUserPreferencesViewModel

@{
    ViewData["Title"] = "Manage Preferences";
}

<div class="container mt-4 p-4 shadow-lg rounded secondary-background" style="max-width: 600px;">
    <h2 class="text-center mb-4">Manage Your Preferences</h2>
     <a asp-controller="User" asp-action="ManageProfile" class="btn btn-outline-danger w-100 mt-3" style="margin-bottom: 1vh">
        Manage Profile
    </a>
    <form asp-action="ManagePreference" method="post">
        <div class="form-group">
            <label asp-for="WeightMin">Minimum Weight (kg)</label>
            <input asp-for="WeightMin" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="WeightMin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="WeightMax">Maximum Weight (kg)</label>
            <input asp-for="WeightMax" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="WeightMax" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HeightMin">Minimum Height (cm)</label>
            <input asp-for="HeightMin" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="HeightMin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HeightMax">Maximum Height (cm)</label>
            <input asp-for="HeightMax" type="number" step="0.1" class="form-control" />
            <span asp-validation-for="HeightMax" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExperienceMin">Minimum Experience (months)</label>
            <input asp-for="ExperienceMin" type="number" class="form-control" />
            <span asp-validation-for="ExperienceMin" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="ExperienceMax">Maximum Experience (months)</label>
            <input asp-for="ExperienceMax" type="number" class="form-control" />
            <span asp-validation-for="ExperienceMax" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-danger w-100">Save Preferences</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


